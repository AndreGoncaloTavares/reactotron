    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "buildServer",
            "program": "${workspaceFolder}/packages/reactotron-server/dist/server/index.js"
        }
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program TS",
            "protocol": "inspector",
            "args": ["${workspaceFolder}/packages/reactotron-server/src/server/index.ts", "-c reactotronConfig.test.json"],
            "cwd": "${workspaceRoot}/packages/reactotron-server",
            "runtimeArgs": ["-r", "ts-node/register"],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
